<!DOCTYPE html>
  <html lang="pt-br">
    <head>
      <meta charset="utf-8"/>
      <title>Formulário de cadastro de Not�cia</title>
    </head>
  <body>

    <h1>Adicionar notícia</h1>
    <br />
    <% if (validacao) { %>
      <ul>
        <% for (var i = 0; i < validacao.length; i++) { %>
          <li>
            <%= validacao[i].msg %>
          </li>
        <% } %>
      </ul>
    <% } %>
    <form action="/noticias/salvar" method="post">
      <label>Título</label>
      <input type="text" id="titulo" name="titulo" value="<%= noticia.titulo %>" placeHolder="Título da notícia" />
      <br />
      <label>Notícia</label>
      <textarea id="noticia" name="noticia" rows="5" cols="30"><%= noticia.noticia %></textarea>
      <br />
      <input type="submit" value="Enviar" />
    </form>

  </body>
</html>